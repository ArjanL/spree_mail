<%= render 'admin/shared/spree_mail_sub_nav' %>

<div class='toolbar'>
  <ul class='actions'>
    <li>
      <p><%= button_link_to t('new_email_layout'), new_object_url, :icon => 'add' %></p>
    </li>
  </ul>
  <br class='clear' />
</div>


<h1><%= t('listing_email_layouts') %></h1>


<table class="index">
  <thead>
  <tr>
    <%= hook :admin_email_layouts_index_headers do %>
      <th><%= sort_link @search, :subject, t('subject') %></th>
      <th><%= sort_link @search, :body, t('message_body') %></th>
      <th><%= hook :admin_email_layouts_index_header_actions %></th>
    <% end %>
  </tr>
  </thead>
  <tbody>
    <% @email_layouts.each do |email_layout|%>
      <tr id="<%= dom_id email_layout %>">
        <%- locals = {:email_layout => email_layout} %>
        <%= hook :admin_email_layouts_index_rows, locals do %>
          <td><%=link_to email_layout.name, object_url(email_layout) %></td>
        <% end %>
        <td>
          <%= hook :admin_email_layouts_index_row_actions, locals do %>
            <%= link_to_edit email_layout %> &nbsp;
            <%= link_to_delete email_layout %> &nbsp;
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate(:previous_label => "&#171; #{t('previous')}", :next_label => "#{t('next')} &#187;") %>

<% content_for :sidebar do %>
<div class="box">
  <h3><%= t('search') %></h3>

  <% @email_layout = EmailLayout.metasearch %>
  <%= form_for [:admin, @email_layout] do |f| %>
    <%- locals = {:f => f} %>
    <%= hook :admin_email_layouts_index_search, locals do %>
      <p>
        <label><%= t 'name' %></label><br />
        <%= f.text_field :name_like, :size => 25 %>
      </p>
    <% end %>
    <%= hook :admin_email_layouts_index_search_buttons, locals do %>
      <p><%= button t('search') %></p>
    <% end %>
  <% end %>
</div>
<% end %>